{
  "name": "burndown-for-github-projects",
  "version": "0.1.0",
  "description": "Burndown chart for GitHub Projects-based sprint boards",
  "main": "build/app.js",
  "scripts": {
    "build": "tsc --build --preserveWatchOutput",
    "clean": "rm -rf build/*",
    "clean:db": "npm run stop:db && docker volume rm burndown_db_cache -f",
    "lint": "eslint .",
    "start": "npm run clean && npm run build && (npm run build -- --watch & node --watch --inspect=0.0.0.0:9229 --enable-source-maps .)",
    "start:db": "docker-compose up",
    "stop:db": "docker-compose down",
    "serve": "node .",
    "test": "jest",
    "postinstall": "[[ $NODE_ENV == 'production' ]] || node ./scripts/generateEnv.js",
    "prepare": "[[ $NODE_ENV == 'production' ]] || husky install",
    "validate": "npm run lint",
    "markdown-inject": "markdown-inject -a"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:target/burndown-for-github-projects.git"
  },
  "keywords": [
    "burndown",
    "agile",
    "sprint",
    "scrum"
  ],
  "dependencies": {
    "@octokit/rest": "18.5.3",
    "body-parser": "1.20.2",
    "color-convert": "2.0.1",
    "cors": "2.8.5",
    "cosmiconfig": "7.0.1",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "fs-extra": "9.1.0",
    "http-status-codes": "2.1.4",
    "mongodb": "6.0.0",
    "node-cron": "3.0.1",
    "uuid": "8.3.2",
    "vega": "5.23.0"
  },
  "devDependencies": {
    "@types/color-convert": "2.0.0",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.17",
    "@types/fs-extra": "9.0.11",
    "@types/jest": "26.0.22",
    "@types/mongodb": "4.0.7",
    "@types/node-cron": "3.0.7",
    "@types/supertest": "2.0.11",
    "@types/tz-offset": "0.0.0",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-canvas-mock": "2.4.0",
    "markdown-inject": "3.1.2",
    "prettier": "3.0.3",
    "standard-version": "9.2.0",
    "supertest": "6.1.4",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "4.2.4",
    "tz-offset": "0.0.2"
  }
}
